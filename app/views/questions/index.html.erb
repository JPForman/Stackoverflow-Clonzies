<h1>Questions</h1>

<% if @questions.any? %>
  <ul>
    <% @questions.each do |question| %>
      <li><%= link_to question.name, question_path(question) %></li>
      <button type="button" id="add" name="upvote">Upvote this question!</button>
      <button type="button" id="subtract" name="downvote">Downvote this question!</button>
    <% end %>
  </ul>
<% else %>
  <p>There are no questions yet.</p>
<% end %>


<p><%= link_to "Create new question", new_question_path %></p>
